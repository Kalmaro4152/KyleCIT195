@page
@model RazorPagesGreatHouse.Pages.Houses.CreateModel

        @{
        ViewData["Title"] = "Add House";
        }
        <div class="bg-opacity-50 bg-light p-3">

        <h1>Add House</h1>
        
    <h4>House</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--<div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="House.Clan" class="control-label"></label>
                <input asp-for="House.Clan" class="form-control" />
                <span asp-validation-for="House.Clan" class="text-danger"></span>
            </div>-->

            <div class="form-group">
                <label for="clan">Great House</label>
                <select class="form-control" asp-for="House.Clan">
                    <option value="">Select Great House</option>
                    @foreach (var clan in Model.ClanList)
                    {
                        <option value="@clan">@clan</option>
                    }
                </select>
                <span asp-validation-for="House.Clan" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <span class="text-danger">*</span>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="House.Slaver" /> @Html.DisplayNameFor(model => model.House.Slaver)
                </label>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="House.Strength" class="control-label"></label>
                <input asp-for="House.Strength" class="form-control" />
                <span asp-validation-for="House.Strength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="House.Characteristic" class="control-label"></label>
                <input asp-for="House.Characteristic" class="form-control" />
                <span asp-validation-for="House.Characteristic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
